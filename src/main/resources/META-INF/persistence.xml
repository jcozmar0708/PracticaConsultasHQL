<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="default">
        <class>entities.Empleado</class>
        <class>entities.Departamento</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/practica"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.user" value="practica"/>
            <property name="hibernate.connection.password" value="practica"/>
        </properties>
    </persistence-unit>
</persistence>
